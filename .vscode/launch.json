{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            // "servertype": "stlink",
            "servertype": "openocd",
            "configFiles": ["stm32f429.cfg"],
            "device": "stm32f429IG",
            "rtos": "auto",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 2
            },
            "svdFile": "STM32F429.svd",
            // "showDevDebugOutput": "raw"
        },
        {
            "name": "App Debug",
            "cwd": "${workspaceFolder}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            // "servertype": "stlink",
            "servertype": "openocd",
            "configFiles": ["stm32f429.cfg"],
            "device": "stm32f429IG",
            "rtos": "auto",
            "overrideLaunchCommands": [
                "monitor reset halt",
                "load",
                "set output-radix 16"
            ],
            "overrideRestartCommands": [
                "monitor reset halt",
                "load",
                "set output-radix 16"
            ],
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 2
            },
            "svdFile": "STM32F429.svd",
            // "showDevDebugOutput": "raw"
        }
    ]
}